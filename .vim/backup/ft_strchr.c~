#include <stdio.h>
#include <string.h>

char*	ft_strchr(const char *s,int c)
{
	int i;

	i = 0;
	while (s[i])
	{
		if (s[i] == (char)c)
			return ((char *)s);
		i++;
	}
	if (s[i] == (char)c == '\0')
		return ((char *)s);
	return (NULL);
}
