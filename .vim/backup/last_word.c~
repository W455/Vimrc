#include <unistd.h>

void	ft_putchar(char c)
{
	write(1, &c, 1);
}

int main(int ac, char **av)
{
	int i = 0;
	if (ac == 2)
	{
		while (av[1][i])
			i++;
		while (i >= 0 && av[1][i] != ' ' && av[1][i] != '\t')
			i--;
		if (i != 0)
			i++;
		while (av[1][i])
		{
			ft_putchar(av[1][i]);
			i++;
		}
	}
	ft_putchar('\n');
}
