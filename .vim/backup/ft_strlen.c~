#include <stdio.h>

int		ft_strlen(char *s)
{
	unsigned int index;

	index = 0;
	while(s[index])
		index++;
	return(index);
}

int		main(int ac, char **av)
{
	if (ac == 2)
	printf("%d", ft_strlen(av[1]));
	return (0);
}
