#include <stdio.h>
#include <string.h>

int main ()
{
	const char str[4] = "1234";
	int ch = 0;
	char *ret;

	ret = strchr(str, ch);

	printf("String after |%c| is - |%s|\n", ch, ret);

	return(0);
}
